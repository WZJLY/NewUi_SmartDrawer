<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RecordFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_Frecord_name"
            android:layout_width="115dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="试剂名"
            android:textAlignment="center"
            android:textColor="#282828"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_Frecord_id"
            android:layout_width="90dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="试剂ID"
            android:textAlignment="center"
            android:textColor="#282828"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_Frecord_type"
            android:layout_width="95dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="操作类型"
            android:textAlignment="center"
            android:textColor="#282828"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_Frecord_allowance"
            android:layout_width="90dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="余量"
            android:textAlignment="center"
            android:textColor="#282828"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_Frecord_weight"
            android:layout_width="90dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="称重量"
            android:textAlignment="center"
            android:textColor="#282828"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_Frecord_wastage"
            android:layout_width="90dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="消耗量"
            android:textAlignment="center"
            android:textColor="#282828"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_Frecord_user"
            android:layout_width="100dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="操作人员"
            android:textAlignment="center"
            android:textColor="#282828"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_Frecord_date"
            android:layout_width="130dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="操作时间"
            android:textAlignment="center"
            android:textColor="#282828"
            android:textSize="18sp" />

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ebebeb"/>

</LinearLayout>